{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "enabledManagers": ["github-actions"],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchManagers": ["github-actions"],
      "updateTypes": ["manager"],
      "baseBranches": ["main"],
      "labels": ["GHA"],
      "matchPaths": [".github/workflows/main.yaml"]
    },
    {
      "matchManagers": ["github-actions"],
      "updateTypes": ["manager"],
      "baseBranches": ["service-a"],
      "labels": ["GHA"],
      "matchPaths": [".github/workflows/service-a.yaml"]
    },
    {
      "matchManagers": ["github-actions"],
      "updateTypes": ["manager"],
      "baseBranches": ["service-b"],
      "labels": ["GHA"],
      "matchPaths": [".github/workflows/service-b.yaml"]
    },
    {
      "matchManagers": ["github-actions"],
      "updateTypes": ["manager"],
      "baseBranches": ["service-c"],
      "labels": ["GHA"],
      "matchPaths": [".github/workflows/service-c.yaml"]
    }
  ]
}
