{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
     ":prHourlyLimitNone"
   ],
  "enabledManagers": ["github-actions"],
  "labels": ["dependencies"],
  "baseBranches": ["main", "service-a", "service-b", "service-c"],
  "ignorePaths": [".github/workflows/*"],
  "packageRules": [
    {
      "groupName": "main",
      "matchBaseBranches": ["main"],
      "matchPaths": ["**/main.yaml"]
    },
    {
      "groupName": "service-a",
      "matchBaseBranches": ["service-a"],
      "matchFiles": ["service-a.yaml"]
    },
    {
      "groupName": "service-b",
      "matchBaseBranches": ["service-b"],
      "matchFiles": ["service-b.yaml"]
    },
    {
      "groupName": "service-c",
      "matchBaseBranches": ["service-c"],
      "matchFiles": ["service-c.yaml"]
    }
  ]
}
