{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "enabledManagers": ["github-actions"],
  "labels": ["dependencies"],
  "baseBranches": ["main", "service-a", "service-b", "service-c"],
  "packageRules": [
    {
      "baseBranches": ["main"],
      "matchFiles": ["main.yaml"]
    },
    {
      "baseBranches": ["service-a"],
      "matchFiles": ["service-a.yaml"]
    },
    {
      "baseBranches": ["service-b"],
      "matchFiles": ["service-b.yaml"]
    },
    {
      "baseBranches": ["service-c"],
      "matchFiles": ["service-c.yaml"]
    }
  ]
}
